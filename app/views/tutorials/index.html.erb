<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpeg' %>
      <div class="carousel-caption">
        Up your game - Kick off your Coding journey with Rookie Coder
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpeg' %>
      <div class="carousel-caption">
        Learn the lingo franca of 21st century
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpeg' %>
      <div class="carousel-caption">
        You got this!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @tutorials.each do |tutorial| %>
<div class="booyah-box col-xs-10 col-xs-offset-1">
<p>Language: <%= tutorial.language %></p>
<p>Category: <%= tutorial.category %></p>
<p>Difficulty: <%= tutorial.difficulty %></p>
<p>Link: <%= tutorial.link %></p>
</div>
<% end %>
